# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{*.rb,*.erb,*.yml,*.yaml,*.jbuilder,*.css,*.scss}]
indent_size = 2
indent_style = space

[{*.js,*.jst,*.ejs}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
